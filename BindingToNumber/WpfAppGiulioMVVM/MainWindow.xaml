<Window x:Class="WpfAppGiulioMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppGiulioMVVM"
        xmlns:bind2num="clr-namespace:BindingStringToNumeric;assembly=BindingToNumeric"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <TextBox Text="{bind2num:BindToNumeric Path=MyPropertyA, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="80,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Double it!" Command="{Binding Path=DoubleCmd}" HorizontalAlignment="Left" Margin="80,130,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBlock Text="{local:CultureAwareBinding Path=MyPropertyB}" HorizontalAlignment="Left" Margin="80,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="{local:CultureAwareBinding Path=MyPropertyA}"  HorizontalAlignment="Left" Margin="230,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
